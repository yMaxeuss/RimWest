<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<RecipeDef MayRequire="Romyashi.MoreAnimalProducts">
		<defName>ConvertFat_RW</defName>
		<label>convert MAP fat to RW</label>
		<description>Turn More Animal Products fat into RimWest fat.</description>
		<recipeUsers>
			<li>ElectricStove</li>
			<li>FueledStove</li>
			<li>Campfire</li>
		</recipeUsers>
		<jobString>Converting fat.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workAmount>70</workAmount>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Romy_Fat</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Romy_Fat</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RW_Fat>15</RW_Fat>
		</products>
	</RecipeDef>

