<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!-- Colt Navy Revolver-->
	
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RW_Gun_ColtNavyRevolver</defName>
    <label>colt 1851 navy revolver</label>
    <description>It’s simple, effective, and ready to take on any challenge the wild throws your way.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ColtNavyRevolver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.2</uiIconScale>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>SimpleGun</li>
      <li>Revolver</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
	<researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>400</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RW_Bullet_ColtNavyRevolver</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>24.9</range>
        <soundCast>RW_ColtNavyRevolverShot</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
	
	<!-- Colt Navy Revolver Bullet-->
	
  <ThingDef ParentName="BaseBullet">
    <defName>RW_Bullet_ColtNavyRevolver</defName>
    <label>colt navy revolver bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
